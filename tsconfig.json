{
  "compilerOptions": {
    "module": "system",
    "moduleResolution": "node",
    "target": "es5",
    "noImplicitAny": true,
    "outDir": "public/app",
    "rootDir": "src",
    "inlineSourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  },
  "filesGlob": [
    "src/**/*.ts"
  ],
  "files": [
    "src/app.ts",
    "src/blog/blogroll.ts",
    "src/app-shell/app-shell.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
